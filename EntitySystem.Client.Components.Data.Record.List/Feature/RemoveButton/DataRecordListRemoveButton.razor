@using EntitySystem.Client.Abstract.Components

@typeparam TKey
@inherits BaseRendered<BaseDataRecordList<TKey>>

<button type="button" class="btn btn-outline-primary me-1" @onclick="@OnRemoveSelectedAsync">Remove</button>

@code
{
	public async Task OnRemoveSelectedAsync()
	{
		var entities = Parameters.Selected
			.Select(i => i.Key)
			.ToArray();

		await Parameters.Source.DeleteAsync(entities);

		await Parameters.OnRefreshAsync();
	}
}