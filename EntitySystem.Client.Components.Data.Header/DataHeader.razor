@using EntitySystem.Client.Components.Data.Header.Property

@typeparam TProperty where TProperty : IDataHeaderProperty<TEntity, TValue>
@typeparam TEntity
@typeparam TValue
@inherits BaseDataHeader<TProperty, TEntity, TValue>

<div class="dropdown" style="white-space: nowrap">
	@Property?.Name
	<button class="btn btn-link" type="button" data-toggle="dropdown" aria-expanded="false" @onclick="@ToggleDropdown">
		<i class="bi-filter-circle ms-1 me-1"></i>
	</button>
	@if (ShowDropdown)
	{
		<div style="position: fixed; width: 100%; height: 100%; top: 0; left: 0; z-index: 1" @onclick="@ToggleDropdown"></div>
		<div class="dropdown-menu show" style="min-width: 20rem; z-index: 1">
			@foreach (var item in Parameters.GetHeaderItems(this).OrderBy(i => i.Priority))
			{
				@item.Render()
			}
		</div>
	}
</div>
